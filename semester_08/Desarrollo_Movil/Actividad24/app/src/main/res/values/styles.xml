<resources>

    <!-- Circular avatar shape style -->
    <style name="CircleImageView" parent="">
        <!-- no-op; used only as a shapeAppearanceOverlay marker -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Text appearance for the “pseudo” -->
    <style name="TextAppearance.TodoItem.Pseudo"
        parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- Text appearance for the task description -->
    <style name="TextAppearance.TodoItem.Body"
        parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

</resources>
